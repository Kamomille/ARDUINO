
        <PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <PreferenceCategory
                android:key="setting1"
                android:title="Profil">
                <EditTextPreference
                    app:key="Prénom"
                    app:title="Votre Prénom"
                    app:useSimpleSummaryProvider="true" />
                <EditTextPreference
                    app:key="Nom"
                    app:title="Votre Nom"
                    app:useSimpleSummaryProvider="true" />
            </PreferenceCategory>
            <PreferenceCategory
                android:key="reseau"
                android:title="Soutenez-nous">
                <Preference
                    android:key="@string/myCoolButton"
                    android:title="Notez l'application"
                    android:summary="Google play"
                    ></Preference>
            </PreferenceCategory>
            <PreferenceCategory
                android:key="Vers"
                android:title="Information sur l'application">
                <EditTextPreference
                    app:key="Version application"
                    app:title="Version 1.0 "
                    app:useSimpleSummaryProvider="false" />
            </PreferenceCategory>
        </PreferenceScreen>
