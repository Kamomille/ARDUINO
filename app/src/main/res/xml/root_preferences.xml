<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Profil">
        <EditTextPreference
            app:key="Prénom"
            app:title="Votre prénom"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="Nom"
            app:title="Votre nom"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="Sync"
            app:title="Activer toutes les notification" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Réseau">

        <Preference
            android:key="myCoolButton"
            android:title="Notez l'application"
            android:summary="Google play"
            ></Preference>

    </PreferenceCategory>
</PreferenceScreen>