<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outil_telecommande"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outils.Outils_telecommande">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/TV_STATUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Bluetooth "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#0B789C"
            android:textSize="25sp" />
        <!-- Permet d'afficher la barre en dessous de Bluetooth-->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/barre" />

        <ListView
            android:id="@+id/LV_DEVLIST"
            android:layout_width="400dp"
            android:layout_height="294dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="200dp"
            android:background="@android:color/holo_orange_dark"
            android:divider="@android:color/holo_blue_dark"
            android:dividerHeight="5dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/outil_telecommande_manette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Permet d'afficher la barre en dessous de Bluetooth-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Telecommande"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#0B789C"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/barre" />
        <CheckBox
            android:id="@+id/CKB_LED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LV_DEVLIST"
            android:layout_marginTop="30dp"
            android:onClick="ledcommand"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="LED" />
        <Button
            android:id="@+id/Led"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Led"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:backgroundTint="#0B789C"
            app:cornerRadius="50sp" />
</LinearLayout>



</ViewFlipper>